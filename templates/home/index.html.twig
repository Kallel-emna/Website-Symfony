{% extends 'base(back).html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="row" style="display: flex;align-items: center;justify-content: center;margin-top: 150px;">
 <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Password</th>
                
                <th>Address</th>
                <th>Telephone</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.password }}</td>
               
                <td>{{ user.address }}</td>
                <td>{{ user.telephone }}</td>
                <td>{{ user.photo }}</td>
                <td>
                    <a href="{{ path('app_user_index', {'id_user': app.user.userIdentifier}) }}">show</a>


                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}
